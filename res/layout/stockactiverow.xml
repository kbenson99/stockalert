<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:background="#F1E986"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/ticker"
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:paddingLeft="3.0dip"
            android:paddingTop="4.0dip"
            android:textColor="@color/black"
            android:textSize="15.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:inputType="none" 
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="12.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/quantity"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:inputType="none" 
            android:textColor="@color/blue"
            android:textSize="12.0sp" 
            android:textStyle="bold" />

        <TextView
            android:id="@+id/value"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:inputType="none" 
			android:textColor="@color/blue"
            android:textSize="12.0sp"
            android:textStyle="bold" />
                        

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F3A9" >

        <TextView
            android:id="@+id/openprice"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none" 
			android:textColor="@color/black"
            android:textSize="12.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/previousprice"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none" 
            android:textColor="@color/black"
            android:textSize="12.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/BreakOut"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none" 
            android:textColor="@color/blue"
            android:textSize="12.0sp" 
            android:textStyle="bold" />

        <TextView
            android:id="@+id/BreakDistance"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none" 
            android:gravity="center"
            android:textColor="@color/purple"
            android:textSize="12.0sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F3A9" >
        
        <TextView
            android:id="@+id/highprice"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none" 
            android:textColor="@color/black"
            android:textSize="12.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lowprice"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none"
            android:textColor="@color/black"
            android:textSize="12.0sp"
            android:textStyle="bold" />        

        <TextView
            android:id="@+id/todayvolume"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none"
            android:textColor="@color/black"
            android:textSize="11.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/volume30"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="none"
            android:textColor="@color/black"
            android:textSize="11.0sp"
            android:textStyle="bold" />

    </LinearLayout>

    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="9.0dip"
        android:inputType="none" 
        android:paddingBottom="14.0dip"
        android:textColor="@color/blue"
        android:textSize="19.0sp"/>

</LinearLayout>