<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:admobsdk="http://schemas.android.com/apk/res/com.pocketools.currency"
 	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:scrollbars="none" >

	<TextView
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:paddingTop="6.0dip"
   		android:text="Ticker:" />

	<EditText
	   android:id="@+id/add_stock_symbol_directly"
	   android:layout_width="match_parent"
	   android:layout_height="wrap_content"
	   android:singleLine="true" >
	    <requestFocus />
	</EditText>   

	<TextView
   		android:layout_width="fill_parent"
   		android:layout_height="wrap_content"
   		android:paddingTop="6.0dip"
   		android:text="Breakout Price:" />

	<EditText
	    android:id="@+id/breakout"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        /> 		

	<LinearLayout 
	   android:orientation="horizontal"
	   android:layout_width="wrap_content"
	   android:layout_height="wrap_content" 
	   android:layout_centerInParent="true"
	   android:layout_centerVertical="true"
	   android:layout_centerHorizontal="true">	
	
            <Button
                android:id="@+id/add_stock_directly_button"
                android:text="@string/AddTickerBtn" 
                android:onClick="onClick"
                android:paddingTop="6.0dip"
                android:layout_width="80dp"
       			android:layout_height="wrap_content"
				/>
            
            <Button
                android:id="@+id/cancel_stock_directly_button"
                android:text="@string/CancelTickerBtn" 
                android:onClick="onClick"
                android:paddingTop="6.0dip"
                android:layout_width="80dp"
       			android:layout_height="wrap_content"
				/>              
    </LinearLayout>

</LinearLayout>