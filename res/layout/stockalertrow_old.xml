<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="true"
        android:background="#F1E986"
        android:orientation="horizontal" >
        

        <TextView
            android:id="@+id/ticker"
            android:layout_width="fill_parent"
			android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingLeft="3.0dip"
            android:paddingTop="4.0dip"
            android:textColor="@color/black"
            android:textSize="14.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastQuote"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="11.0sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastChange"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="11.0sp" 
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/ChangePercentage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="12.0sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/BreakOut"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="11.0sp" 
            android:textStyle="bold"/>
        
        <TextView
            android:id="@+id/BreakDistance"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/purple"
            android:textSize="11.0sp" 
            android:paddingRight="4.0dip"/> 
    </LinearLayout>

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F3A9"
        android:orientation="horizontal" >
  
        <TextView
            android:id="@+id/openprice"
            android:layout_width="fill_parent"
			android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:paddingLeft="3.0dip"
            android:paddingTop="4.0dip"
            android:textColor="@color/black"
            android:textSize="12.0sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/previousprice"
            android:layout_width="fill_parent"
			android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textColor="@color/black"
            android:textSize="12.0sp"
            android:textStyle="bold" />        

        <TextView
            android:id="@+id/highprice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12.0sp"
            android:textStyle="bold" />        
        
        <TextView
            android:id="@+id/lowprice"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12.0sp"
            android:textStyle="bold" />                                   
        
	</LinearLayout>                
 
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F9F3A9"
        android:orientation="horizontal" >        
        
        <TextView
            android:id="@+id/todayvolume"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:paddingLeft="3.0dip"
            android:textColor="@color/black"
            android:textSize="12.0sp"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/volume30"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="12.0sp"
            android:textStyle="bold" />          
 	</LinearLayout>            
    
    <TextView
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="12.0dip"
        android:paddingLeft="9.0dip"
        android:textColor="@color/blue"
        android:textSize="17.0sp"/>    
    

</LinearLayout> 

